{
  "name": "@mudcrab/webz",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon .",
    "prod": "NODE_ENV=production node build/src/index.js",
    "build": "yarn tsc && cp package.json build/package.json",
    "migrate:new": "knex migrate:make -x ts",
    "migrate": "knex migrate:latest",
    "migrate:win": "tsc && knex migrate:latest",
    "migrate:rollback": "tsc --outDir build/migrations migrations/*.ts && knex migrate:rollback",
    "test": "ava",
    "pm2": "pm2 start processes.json --no-daemon"
  },
  "dependencies": {
    "@types/knex": "^0.16.1",
    "@types/node": "^14.0.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.3.0",
    "koa-mount": "^4.0.0",
    "koa-multer": "^1.0.2",
    "koa-router": "^8.0.8",
    "koa-static": "^5.0.0",
    "objection": "^2.1.3",
    "pm2": "^4.4.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.8.1",
    "typedi": "^0.8.0",
    "typescript": "^3.9.2"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.0",
    "ava": "^3.8.2",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.1"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "none",
    "semi": true
  }
}
